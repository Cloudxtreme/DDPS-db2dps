

cat << EOF > /opt/db2dps/etc/db2dps.service
[Unit]
Description=Regular background program processing daemon
After=syslog.target network.target postgres.service

[Service]
Type=forking
ExecStart=/opt/db2dps/etc/init.d/db2dpsrc start
ExecStop=/opt/db2dps/etc/init.d/db2dpsrc stop

ExecReload=/opt/db2dps/etc/init.d/db2dpsrc reload

[Install]
WantedBy=multi-user.target
EOF

cp db2dps.service /etc/systemd/system/

systemctl enable db2dps.service
systemctl start db2dps.service


systemctl stop db2dps.service
systemctl disable db2dps.service
rm -f /etc/systemd/system/multi-user.target.wants/db2dps.service /etc/systemd/system/db2dps.service
systemctl daemon-reload
systemctl reset-failed

